logoLarge : C.ExplicitLength units -> H.Html msg
logoLarge height =
    (logoPathIcon True ++ logoPathText)
        |> Svg.svg [ SvgA.viewBox "0 0 569 128", SvgA.css [ C.height height ] ]


logoLargeMono : C.ExplicitLength units -> H.Html msg
